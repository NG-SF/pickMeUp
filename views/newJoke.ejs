<html lang="en">
  <head>
    <title>PickMeUp</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/smile.png">
    <link href="https://fonts.googleapis.com/css?family=Arima+Madurai|Roboto:400,500" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.css">
    <link rel="stylesheet" href="/stylesheets/app.css">
  </head>

<body>
  
<nav role="navigation">
	<ul class="nav-list">
      <li><a class="active" href="/" disabled>PickMeUp</a></li>
			<li><a href="/">Home</a></li>
			<li><a href="/jokes/users/<%= id %>">Dashboard</a></li> 
      <li class="right"><a href="/">Log Out</a></li> 
		</ul>
	</nav>
  
  <main>

<div class="form-container">
  <form class="ui form" id="form" action="/jokes/users/<%= id %>" method="POST">
  <h1 class="ui huge purple centered header">Add new joke</h1>
    
    <div class=" field">
      <label for="title">Title</label>
      <input type="text" name="title" placeholder="title" id="title" required>
    </div>
    
    <div class="field">
      <label for="image">Image</label>
      <input type="text" name="image" placeholder="image url" id="image">
    </div>
    
    <div class="field">
      <label for="content">Content</label>
      <textarea name="content" placeholder="add your joke here" id="content"></textarea>
    </div>
    
    <button class="ui purple basic big button" type="submit">Submit</button>
    <a class="ui red basic big button" href="/jokes/users/<%= id %>">Cancel</a>
  </form>
</div>

</main>
</body>
</html>
