<% include ./partials/header %>

<div class="ui main text container segment">
  <h1 class="ui huge header">Edit <%= blog.title %></h1>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" id="title">
    </div>
    <div class="field">
      <label for="image">Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" id="image">
    </div>
    <div class="field">
      <label for="content">Content</label>
      <textarea name="blog[body]" id="content"><%- blog.body %></textarea>
    </div>
    <button class="ui purple basic big button" type="submit">Submit</button>
  </form>
</div>

<% include ./partials/footer %>