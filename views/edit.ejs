<% include ./partials/header %>

<div class="ui main text container segment">
  <h1 class="ui huge header">Edit <%= joke.title %></h1>
  <form class="ui form" id="form" action="/jokes/users/<%= joke._id %>?_method=PUT" method="POST">
    
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" value="<%= joke.title %>" id="title">
    </div>
    
    <div class="field">
      <label for="image">Image</label>
      <input type="text" name="image" value="<%= joke.image %>" id="image">
    </div>
    
    <div class="field">
      <label for="content">Content</label>
      <textarea name="content" id="content"><%- joke.content %></textarea>
    </div>
    
    <button class="ui purple basic big button" type="submit">Submit</button>

  </form>
</div>

</main>
</body>
</html>
