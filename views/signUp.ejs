<% include ./partials/header %>

<div class="form-container">
<form class="ui big form" action="/users/create" method="POST">
  <div class="ui stacked segment">
    
    <h2 class="ui purple header">Sign Up</h2>
      <div class="field">
        <label for="firstName">First Name: </label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="firstName" id="firstName">
            </div>
          </div>

    <div class="field">
     <label for="lastName">Last Name: </label>
       <div class="ui left icon input">
        <i class="user icon"></i>
         <input type="text" name="lastName" id="lastName">
       </div>
    </div>

    <div class="ui error">
     <div class="required field">
      <label for="userName">Username: </label>
        <div class="ui left icon input">   
          <i class="paw icon"></i>
            <input type="text" name="username" placeholder="should be unique"  id="userName" required>
           </div>
        </div>  
         <section class="ui error message">
            <h2 class="header">Validation Error</h2>
          <p>Username is required and should be unique</p>
          </section>
        </div>

    <div class="ui error">
      <div class="required field">
        <label for="password">Password: </label>
          <div class="ui left icon input">    
            <i class="lock icon"></i>
              <input type="password" name="password" placeholder="must be 5 - 15 characters"  id="password" required>
            </div>
          </div>
         <section class="ui error message">
            <h2 class="header">Validation Error</h2>
          <p>Password is required and should be between 5-15 chaaracters long</p>
          </section>
        </div>

     <button class="ui large purple submit button" type="submit">Submit</button>
  </div>
</form>
</div>

</main>
</body>
</html>