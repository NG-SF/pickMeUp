<% include ./partials/header %>

<div class="ui container login">

  <div class="ui middle aligned center aligned grid">
    <div class="six wide column">

      <form class="ui big form" action="/users/create" method="POST">
        <div class="ui stacked segment">
        <h2 class="ui teal header">Sign Up</h2>

        <div class="field">
            <div class="ui input">
              <label for="firstName">First Name: </label>
             
              <input type="text" name="firstName" placeholder="First name" id="firstName">
            </div>
          </div>

        <div class="field">
            <div class="ui input">
              <label for="lastName">Last Name: </label>
             
              <input type="text" name="lastName" placeholder="Last name" id="lastName">
            </div>
          </div>

         <div class="required field">
            <div class="ui input">   
              <label for="userName">Username: </label>
              
              <input type="text" name="username" placeholder=" User name (make it unique)" required id="userName">
            </div>
          </div>

          <div class="required field">
            <div class="ui input">    
              <label for="password">Password: </label>
              
              <input type="password" name="password" placeholder="Password (must be between 5-15 characters" required id="password">
            </div>
          </div>

          <button class="ui large purple submit button" type="submit">Submit</button>
        </div>
      </form>

    </div><!-- end of column -->

</div>
</div>


<% include ./partials/footer %>
