<% include ./partials/header %>

<div class="ui container login">

  <div class="ui middle aligned center aligned grid">
    <div class="six wide column">
      <h2 class="ui orange header">Log-in to your account</h2>

      <form class="ui large form" action="/jokes" method="POST">
        <div class="ui stacked segment">

          <div class="required field">
            <div class="ui left icon input">
              <i class="mail outline icon"></i></i>
              <input type="text" name="email" placeholder="E-mail address" required>
            </div>
          </div>

          <div class="required field">
            <div class="ui left icon input">

            <i class="lock icon"></i>
              <input type="password" name="password" placeholder="Password" required>
            </div>
          </div>

          <button class="ui large purple submit button" type="submit">Submit</button>
        </div>
      </form>

      <div class="ui message">
        <p>"Don't have an account?"</p>
        <a href="/jokes">Sign Up</a>
      </div>

    </div><!-- end of column -->

</div>
</div>


