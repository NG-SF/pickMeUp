<% include ./partials/header %>

<div class="ui container login">
  <div class="ui middle aligned center aligned grid">
    <div class="six wide column">

      <form class="ui big form" action="/users/login" method="POST">
      <div class="ui raised segment">
        
      <h2 class="ui orange header">Log-in to your account</h2>

        <div class="ui error">
          <div class="required field">
            <div class="ui left icon input">
              <label for="userName">Username:</label>
              <input type="text" name="username" placeholder="Username" required id="userName">
              <i class="paw icon"></i>
            </div>
          </div>
          <section class="ui error message">
            <h2 class="header">Validation Error</h2>
          <p>Username is required</p>
          </section>
        </div>

        <div class="ui error">
          <div class="required field">
            <div class="ui left icon input">
              <label for="password">Password:</label>
              <input type="password" name="password" placeholder="Password" required id="password">
              <i class="lock icon"></i>
            </div>
            <section class="ui error message">
            <h2 class="header">Validation Error</h2>
          <p>Password is required</p>
          </section>
        </div>

          <button class="ui large purple submit button" type="submit">Submit</button>
        </div>
        </div>
      </form>

      <div class="ui message">
        <p>"Don't have an account?"</p>
        <a class="ui big green labeled icon button" role="button" href="/jokes">Sign Up</a> <i class="signup icon"></i>
      </div>

    </div><!-- end of column -->


</div>
</div>


<% include ./partials/footer %>
